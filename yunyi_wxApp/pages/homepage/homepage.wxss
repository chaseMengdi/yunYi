/* pages/homepage/homepage.wxss */
page{
  background-color: white;
}

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}
.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}
.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
  background-color: white;
}
.VerticalMain{
  background-color: #f1f1f1;
  height:calc(100vh - 27vh - 44px);
  width: 80%;
}
.myTextarea{
  width: 100%;
}
.myHead{
  height: 27vh;
}
.myButtonBar{
  height: 44px;
  padding: 7px;
}
.mySaveButton {
  width: 30%;
}
van-button{
  margin: 0 20px;
}
