/* pages/homepage/homepage.wxss */
@import "../model-1/model-1.wxss";
@import "../model-2/model-2.wxss";
@import "../model3/model3.wxss";

.trip{
  padding: 40rpx 30rpx 0;
}
.trip .trip-top{
  overflow: hidden;
}
.trip .trip-user{
  float: left;
  width: 72rpx;
  height: 72rpx;
  border-radius: 72rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.trip .trip-info{
  max-width: 100%;
}
.trip .trip-info .h1{
  font-size: 40rpx;
  line-height: 2;
  color: #4abdcc;
  white-space: nowrap; 
  text-overflow: ellipsis; 
  overflow: hidden; 
  margin-bottom: 9rpx;
}
.trip .trip-info .detail{
  line-height: 1;
  color: #5c5c5c;
  font-size: 30rpx;
}
.trip .trip-info .detail text{
  padding-right: 20rpx;
}
.trip-wps{
  margin-top: 36rpx;
}
.day .wp-sep{
  background: #e7ddc6;
  height: 36rpx;
  margin-left: 20rpx;
  width: 8rpx;
}
.day .day-marker{
  color: #a8915e;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 32rpx;
  height: 32rpx;
}
.day .circle{
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border: 8rpx solid #e7ddc6;
  margin: 0 8rpx;
  vertical-align: text-bottom;
}
.day-content .photo-ctn{
  position: relative;
}
.day-content .cover{
  vertical-align: bottom;
}
.day-content .text{
  background-color: #fff;
  padding: 10rpx 20rpx 0;
  color: #5c5c5c;
  word-break: break-word;
}
.day-content .wp-stats{
  padding: 10rpx 18rpx 22rpx;
  background-color: #fff;
  overflow: hidden;
  border-bottom: 6rpx solid #e7e7e7;
}
.day-content .wp-stats .wp-time{
  font-size: 24rpx;
  float: left;
  color: #999;
  height: 44rpx;
  line-height: 44rpx;
}
.day-content .wp-stats .icon-time{
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
  position: relative;
  top: -2rpx;
  width: 24rpx;
  height: 24rpx;
}
 .share{
  width: 38rpx;
  height: 36rpx;
  padding:0 20rpx;
  position: absolute;
  right: 32rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  background-size: 38rpx 36rpx;
  background-repeat:no-repeat;
  border:none;
}


.bt-img{
  width: 40px;
  height: 40px;
overflow: hidden;

}.bt-img2{
  width: 35px;
  height: 35px;
overflow: hidden;
}.seg_line_box {
  display: flex;
  height: 5rpx;
  justify-content: center;
  margin-top: 5rpx;
}

.seg_line_left {
  width: 325rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.seg_line_dot {
  width: 50rpx;
  border-bottom: 5rpx dotted #dbdbdb;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.seg_line_right {
  width: 325rpx;
  border-bottom: 1rpx solid #e1e1e1;
}
.title_text {
  display: flex;
  color: #3f9f94;
  font-size: 38rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}
textarea{
  border: 1px solid #ccc;
  margin: 0 auto;
  padding:10px 8px;
  font-size:14px;
  line-height:1.2;
  color:#333;


}
.commit_submit_btn {
  left:220rpx;
  width:150rpx;
  height: 95rpx;
}

.save_btn {
  left:220rpx;
}

.choose_btn {
  left:100rpx;
  height: 60rpx;
}